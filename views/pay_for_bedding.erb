<%
  @page_class = "register"
  @page_title = "Pay For Bedding"
%>

<%= partial :_header_banner %>

<section class="grid" role="main">

  <% if @errors %>
    <%= partial :_rego_errors %>
  <% else %>
    <h1>Time to pay for your bedding pack!</h1>
  <% end %>

  <form method="post">
    <fieldset>
      <label for="email">Email</label>
      <input id="email" name="bedding_payment[email]" type="email" required autocompletetype="email">
    </fieldset>
    <%= partial :_card_details, payment_model_name: "bedding_payment", payment_model: @bedding_payment %>
    <%= partial :_register_button, info: 'This card will be charged $12', action: 'Pay' %>
  </form>

</section>

<%= partial :_payment_sponsorship %>
